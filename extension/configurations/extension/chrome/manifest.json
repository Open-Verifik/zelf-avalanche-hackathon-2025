{
	"description": "Zelf Keys - Secure Digital Identity and Key Management Extension",
	"host_permissions": ["*://*/*"],
	"manifest_version": 3,
	"name": "Zelf Keys",
	"orientation": "portrait",
	"permissions": ["activeTab", "clipboardWrite", "clipboardRead", "storage", "sidePanel"],
	"version": "1.0.0",
	"action": {
		"default_popup": "index.html",
		"default_icon": "assets/icons/icon256.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["browser-polyfill.min.js", "main.js"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self';"
	},
	"icons": {
		"16": "assets/icons/icon16.png",
		"48": "assets/icons/icon48.png",
		"128": "assets/icons/icon128.png",
		"256": "assets/icons/icon256.png"
	},
	"side_panel": {
		"default_path": "index.html"
	},
	"web_accessible_resources": [
		{
			"resources": ["index.html", "styles.css", "main.js", "runtime.js", "polyfills.js", "background.js"],
			"matches": ["<all_urls>"]
		}
	]
}
